<%= form_for @user, url: @user.new_record? ? signup_path : user_path(@user)do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :email %>
  <%= f.email_field :email, class: "form-control" %>
  <%= f.label :birthday %>
  <%= f.date_field :birthday, class: "form-control" %>
  <%= f.label :gender %>
  <%= f.select :gender,
                User.genders.keys.map {|g| [t("activerecord.enums.user.gender.#{g}"), g]},
                prompt: t("users.new.select_gender"),
                class: "form-control" %>
  <%= f.label :password %>
  <%= f.password_field :password, class: "form-control" %>
  <%= f.label :password_confirmation, t("users.new.confirmation") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
